<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<center>
		<h1><%= link_to "Blog com Ruby on Rails", root_path %></h1>	
		<% if user_signed_in? and current_user.profile %>
			<ul> 
					Usu√°rio: <%= link_to current_user.email, profile_path(current_user.profile.id) %> |
					<%= link_to "Novo Post", new_post_path %> | 
					<%= link_to "Editar Perfil", edit_profile_path(current_user.profile.id) %> | 
					<%= link_to "Sair", destroy_user_session_path, :method => :delete %>
			</ul>	
		<% else %>
			<ul> 
					<%= link_to "Login", new_user_session_path %> |
					<%= link_to "Register", new_user_path %>
			</ul>	
		<% end %> 	 
		<%= yield %>
	</center>
</body>
</html>