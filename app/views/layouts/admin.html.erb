<!DOCTYPE html>
<html>
	<head>
		  <title>Blog</title>
		  <%= stylesheet_link_tag :all %>
		  <%= javascript_include_tag :defaults %>
		  <%= csrf_meta_tag %>
	</head>
<body>
	<div id="container">
	
				<div id="head">
					<center>
						<h1><%= link_to "Blog em Ruby on Rails", root_path %></h1>					
						<% if user_signed_in? and current_user.profile %>
							<ul> 
									Usuário: <%= link_to current_user.email, profile_path(current_user.profile.id) %> |
									<% if can? :create, Post %>
										<%= link_to "Novo Post", new_post_path %> | 
									<% end %>
									<% if can? :manage, :all %>
										<%= link_to "Usuários", users_path %> | 
									<% end %>
									<%= link_to "Editar Perfil", edit_profile_path(current_user.profile.id) %> | 
									<%= link_to "Sair", destroy_user_session_path, :method => :delete %>
							</ul>	
						<% else %>
							<ul> 
									<%= link_to "Login", new_user_session_path %> |
									<%= link_to "Register", new_user_path %>
							</ul>	
						<% end %> 	 
					</center>
				</div>
		
				<div id="body_container_admin">
					<div id="body_body">
						<%= yield %>		
					</div>
				</div>
		
	</div>			
</body>
</html>